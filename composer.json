{
  "name": "aportela/httprequest-wrapper",
  "description": "Custom curl http request wrapper",
  "type": "library",
  "license": "AGPL-3.0-only",
  "authors": [
    {
      "name": "alex",
      "email": "766f6964+github@gmail.com"
    }
  ],
  "homepage": "https://github.com/aportela/httprequest-wrapper",
  "autoload": {
    "psr-4": {
      "aportela\\HTTPRequestWrapper\\": "src"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=8.4",
    "psr/log": "^3.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit --testdox",
    "fix": "vendor/bin/php-cs-fixer fix src",
    "stan": "vendor/bin/phpstan analyse -c phpstan.neon"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.88",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.5"
  }
}
